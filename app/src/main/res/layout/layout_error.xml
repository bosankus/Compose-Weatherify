<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="bose.ankush.weatherify.presentation.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_error"
        app:isCurrentTempFailed="@{viewmodel.temperature}"
        app:isWeatherForecastFailed="@{viewmodel.forecast}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/layout_error_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_36dp"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/white"
            android:textSize="@dimen/text_54sp"
            app:errorFetchingTemperature="@{viewmodel.temperature}"
            app:errorFetchingForecast="@{viewmodel.forecast}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/layout_error_btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_44dp"
            android:background="@color/retry_btn"
            android:onClick="@{() -> viewmodel.fetchClimateDetails()}"
            android:text="@string/retry_btn_txt"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_error_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>